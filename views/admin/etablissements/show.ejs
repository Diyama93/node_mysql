<%- include ('../header') -%>
<div class="container mt-4  page-content  ">    
    <div class="card">
        <div class="card-header">
                <h4><a class="btn btn-secondary" href="/etablissement/add"><i class="fa fa-plus"></i>Ajouter</a>Liste de tous les etablissements</h4>
        </div>
        <% if (locals.flash && locals.flash.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= flash.error %>
            </div>
            <% } %>
            <% if (locals.flash && locals.flash.success) { %>
            <div class="alert alert-success" role="alert">
                <%= flash.success %>
            </div>
            <% } %>
        <div class="card-body table-responsive">
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Centre de formation</th>
                    <th scope="col">Responsable</th>
                    <th scope="col">Fin abonnement</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (etablissement of etablissements) { %>
                    <tr>
                    <td scope="row"><%= etablissement.nom %></td>
                    <td><%= etablissement.respo %></td>
                    <td><%= etablissement.dateFin.format('DD/MM/YYYY  ') %></td>
                    <td>                        
                    <a class="btn btn-success fa fa-pencil"  href="/etablissement/<%= etablissement.id %>/edit"></a>
                    <a class="btn btn-danger fa fa-trash " href="/etablissement/<%= etablissement.id %>/delete" onclick="return confirm('Voulez-vous vraiment faire cette suppression ?')"></a>
                    </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include ('../footer') -%>