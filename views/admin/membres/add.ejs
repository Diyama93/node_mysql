<%- include ('../header') -%>
<div class="container mt-4  page-content col-md-6 ">    
    <div class="card">
        <div class="card-header">
            <a  href="/membre"><i class="fa fa-reply" aria-hidden="true"></i>Retour</a>
            <h4>Ajouter un membre</h4>
        </div>
            <% if (locals.flash && locals.flash.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= flash.error %>
            </div>
            <% } %>
            <% if (locals.flash && locals.flash.success) { %>
            <div class="alert alert-success" role="alert">
                <%= flash.success %>
            </div>
            <% } %>

        <div class="card-body">
            <form action="/membre/add" method="POST">
                <div class="form-group">
                    <label for="nom">Nom</label>
                    <input type="text" class="form-control" id="nom" name="nom">
                </div>
                <div class="form-group">
                    <label for="prenom">Prénom(s)</label>
                    <input type="text" class="form-control" id="prenom" name="prenom">
                </div>
                <div class="form-group">
                    <label for="email">Adresse mail</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="date"> Date de fin d'abonnement</label>
                    <input type="date" class="form-control" id="date" name="dateFin">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Type du membre</label>
                    <select class="form-control" id="exampleFormControlSelect1" name="type">                        
                            <option selected="true" disabled="disabled"> Selectionner le type du membre</option> 
                            <option> Donateur</option>
                            <option> Bénévole</option>                        
                    </select>
                </div>
                
                <button type="submit" class="btn btn-primary">Enrégister</button>
            </form>
        </div>
    </div>
</div>
<%- include ('../footer') -%>