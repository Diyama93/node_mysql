    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="/style.css">
    <title>Forma-Green</title> 
    <style>
    /* Always set the map height explicitly to define the size of the div
    * element that contains the map. */
    #map {
        height: 100%;
    }
    /* Optional: Makes the sample page fill the window. */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }
    </style>
     <!-- Font Awesome CSS -->
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
  <body>
              
    <nav>
        <a class="navbar-brand js-scroll-trigger text-white fixed-left" href="/"><h4> Forma-Green</h4></a>
        
        
    </nav>
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            Ajouter un utilisateur
        </div>
          
      {{#if message}}
            <h4 class="alert alert-danger mt4">{{message}}</h4>
            {{/if}}

        <div class="card-body">
            <form action="/auth/register" method="POST">
                <div class="form-group">
                    <label for="nom">Nom</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="prenom">Adresse mail</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="password"> Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="form-group">
                    <label for="passwordConfirm"> Comfirmer le mot de passe</label>
                    <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm">
                </div>
                
                <button type="submit" class="btn btn-primary">Enr√©gister</button>
            </form>
                <a class="text-secondary" href="/login">Connexion</a>
        </div>
    </div>
</div>
<script type="text/javascript" src="map/js/mapmarkers.js"></script>
<script defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCITtqmgaygK8_qxBJFtS20VC6CduQAFME&callback=initMap">
