<%- include ('../header') -%>
<div class="container mt-4">        
    <div class="card">
        <div class="card-header">
                <h3 class="text-left">Liste de tous les membres  </h3> 
                <h4 class="text-right"><a href="/membre/add"><i>Ajouter un membre</i></a></h4>
        </div>
        <div class="card-body table-responsive">
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Email</th>
                    <th scope="col">Fin abonnement</th>
                    <th scope="col">Type</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (membre of membres) { %>
                    <tr>
                    <th scope="row"><%= membre.id %> </th>
                    <td><%= membre.nom %></td>
                    <td><%= membre.prenom %></td>
                    <td><%= membre.email %></td>
                    <td><%= membre.dateFin.format('DD/MM/YYYY  ') %></td>
                    <td><%= membre.idType %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include ('../footer') -%>